{
  "name": "jojos-partypack",
  "version": "1.0.0",
  "description": "Jackbox-style party pack with Node, Express, Socket.IO, Vite",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "private": true,
  "scripts": {
    "dev:server": "nodemon server/index.js",
    "dev:client": "vite --config vite.config.js --open",
    "dev": "concurrently -k -n SERVER,CLIENT \"npm:dev:server\" \"npm:dev:client\"",
    "build": "vite build --config vite.config.js",
    "start": "node server/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.8.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^8.1.0",
    "nanoid": "^5.0.7",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "nodemon": "^3.1.10",
    "vite": "^7.1.4"
  }
}
